@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h1>Student Details Pages</h1>
<hr/>

<h2>@Html.DisplayFor(model => model.StudentName) : @Html.DisplayFor(model => model.StudentId)</h2>

<h3>Social Score: @Html.DisplayFor(model => model.StudentSocialScore)</h3>

<h3>Courses:</h3>
@if (@Model.Courses.Count == 0)
{
  <p>No enrolled courses</p>
}
else
{
  <ul>
  @foreach (var join in Model.Courses)
  {
    <li>@join.Course.Name</li>
  }
  </ul>
}

<ul>
  @foreach(var join in Model.Courses)
  {
    <li>@join.Course.Name</li>
    @using (Html.BeginForm("DeleteCourse", "Students"))
    {
      @Html.Hidden("joinId", @join.CourseStudentId)
      <input type="submit" value="Delete"/>
    }
  }
</ul>

<p>@Html.ActionLink("Back to Students", "Index")</p>
<p>@Html.ActionLink("All Courses", "Index", "Courses")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>