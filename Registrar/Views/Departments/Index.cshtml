@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Department>;

<h1>Departments</h1>

@if(@Model.Count == 0)
{
  <p>No departments have been created yet.</p>
}

@foreach(Department department in Model)
{
  <li>@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId })</li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add a Department", "Create", "Departments")</p>