@{
  Layout = "_Layout";
}

@model Registrar.Models.Department

<h1>Add a new Department</h1>

@using (Html.BeginForm())
{
  @Html.Label("Name", "Department Name")<br>
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Building)<br>
  @Html.TextBoxFor(model => model.Building)<br>

  <input type="submit" value="Add new Department" /><br>
}

<p>@Html.ActionLink("Show all Students", "Index", "Students")</p>