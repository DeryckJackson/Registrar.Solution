@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model Registrar.Models.Department;

<h2>Department Details</h2>
<hr/>
<h4>Name: @Html.DisplayFor(model => model.Name)</h4>
<hr/>
<h4>Building: @Html.DisplayFor(model => model.Building)</h4>
<hr/>

@if(ViewBag.Students.Count == 0)
{
  <p>There are no students in this department.</p>
}
<ul>Students:
@foreach (Student student in ViewBag.Students)
{
  <li>@student.StudentName</li>
}
</ul>
@if(ViewBag.Courses.Count == 0)
{
  <p>There are no courses in this department.</p>
}
<ul>Courses
@foreach (Course course in ViewBag.Courses)
{
  <li>@course.Name</li>
}
</ul>

<p>@Html.ActionLink("Return to Department List", "Index")</p>